<div class="col-md-offset-3 col-md-6">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title">
				<%= t('login') %>
			</h3>
		</div>
		<div class="panel-body">
			<%= simple_form_for @company, url: company_sessions_path do |f| %>
				<%= f.input :email %>
				<%= f.input :password %>

				<div class="form-group password required company_password">
					<%= check_box_tag :remember_me, true %> <%= t('remember_me') %>
				</div>
				
				<%= f.submit t('login'), class: "btn btn-primary btn-sign-in-up" %>
			<% end %>

			<div class="register-sign-in-wrapper">
				<strong><%= t('not_on_vendox') %></strong><br>
				<%= link_to t('register'), new_company_path %><br>
				<%= link_to t('reset_password'), new_company_password_path %>
			</div>
		</div>
	</div>
</div>
