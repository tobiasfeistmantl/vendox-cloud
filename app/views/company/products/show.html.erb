<div class="panel panel-default">
	<div class="panel-body">
		<div class="col-md-4">
			<%= image_tag @product.product_picture, width: '100%', class: 'img-thumbnail' %>
		</div>

		<div class="col-md-8">
			<h1>
				<%= @product.name %>
				<small>
					<%= t('by_model', model: link_to(@company.name, @company)).html_safe %>
				</small>
			</h1>

			<% if @product.order_link %>
				<%= link_to t('buy'), @product.order_link, class: 'btn btn-primary', target: '_blank' %>
			<% end %>

			<p>
				<h3><%= number_to_currency @product.price %></h3>
				<%#= t("#{@product.status}") %>
				<%= @company.address %>
			</p>

			<div class="thumbnail" id="map" style="height: 400px"></div>
		</div>
	</div>
</div>

<script type="text/javascript">
	buildMap(<%=raw @maps_hash.to_json %>, setZoom = true);
</script>