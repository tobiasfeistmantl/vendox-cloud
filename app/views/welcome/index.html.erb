<div class="text-center">
	<h1>
		<%= t('welcome_title') %>
		<br>
		<small>
			<%= link_to t('learn_more'), about_path %>
		</small>
		<br>
	</h1>
	
	<div class="col-md-offset-4 col-md-4">
		<%= render 'product/products/search_form' %>
	</div>

	<div class="col-md-12">
		<%= link_to "https://itunes.apple.com/at/app/vendox-finder/id1001924240?l=en&mt=8" do %>
			<%= image_tag "/badges/app_store_badge.png", id: 'app-store-badge' %>
		<% end %>
	</div>

	<div class="col-md-12 facebook-like-wrapper">
		<div class="fb-like" data-href="https://www.facebook.com/vendoxfinder" data-layout="button" data-action="like" data-show-faces="true" data-share="true"></div>
	</div>

	<div class="col-md-offset-2 col-md-8">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<h3 class="panel-title">
					<%= t('currently_free_box.important_currently_free') %>
				</h3>
			</div>

			<div class="panel-body">
				<p>
					<%= t('currently_free_box.young_company') %>
				</p>
				<p>
					<%= t('currently_free_box.free') %>
				</p>

				<p>
					<%= t('currently_free_box.register') %><br>
					<strong>
						<%= link_to t('currently_free_box.here'), new_company_path %>
					</strong><br>
					<%= t('currently_free_box.start_selling') %>
				</p>

				<p>
					<strong><%= t('already_registered') %></strong><br>
					<%= link_to t('login'), new_company_session_path %>
				</p>
			</div>
		</div>
	</div>

	<div class="col-md-12">
		<h2><%= t('not_listed') %></h2>
		<h3>
			<p><%= t('currently_free_box.register') %></p>
			<p><%= link_to t('currently_free_box.here'), new_company_path %></p>
			<p><%= t('currently_free_box.start_selling') %></p>
		</h3>

	</div>
</div>