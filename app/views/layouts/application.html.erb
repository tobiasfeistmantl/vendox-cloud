<!DOCTYPE html>
<html>
<head>
	<title>Vendox</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
	<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
</head>
<body>

<%= render 'shared/navbar' %>

<%= render 'shared/messages' %>

<div class="container">
	<%= yield %>

	<div class="col-md-12 text-center current-location-wrapper">
		<% if current_user_location %>
			<%= t('your_current_location_is') %> <strong><%= current_user_location %></strong>
		<% end %>
	</div>
</div>

<% unless current_user_location %>

<script type="text/javascript">
	if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(setPosition);
    }

    function setPosition(position) {
    	$.get("/position?lng=" + position.coords.longitude + "&lat=" + position.coords.latitude, function(data, status) {
    		$('.current-location-wrapper').html(data)
    	})
    }
</script>

<% end %>

<% if Rails.env.development? %>
	<%= console %>
<% end %>

</body>
</html>
