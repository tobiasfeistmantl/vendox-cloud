<div class="col-md-12 footer text-center">
	<div class="current-location-wrapper">
		<% if current_user_location %>
			<span class="current-location-info">
				<%= t('your_current_location_is') %>
				<strong>
					<%= current_user_location %>
				</strong>
			</span>
			<% unless company_signed_in? %>
				| <%= link_to t('renew_location'), "#", class: 'user-location-renew-button' %>
			<% end %>
		<% end %>
	</div>

	<br>

	<p>
		<%= link_to t('imprint'), imprint_path %>
	</p>
	
	<%= link_to "https://www.facebook.com/pages/Vendox/1075011619182413" do %>
		<%= image_tag "/logo/facebook-brand.png" %>
	<% end %>
</div>